#!/usr/bin/env bash
# run from directory where this script is
cd `echo $0 | sed 's/\(.*\)\/.*/\1/'` # extract pathname
EXAMPLE_DIR=`pwd`


# check whether echo has the -e option
if test "`echo -e`" = "-e" ; then ECHO=echo ; else ECHO="echo -e" ; fi

$ECHO
$ECHO "$EXAMPLE_DIR : starting"
$ECHO
$ECHO "Forces for an iron chain with a non-collinear magnetic configuration."

# set the needed environment variables
. ../../../environment_variables
ulimit -s unlimited

rm -rf tempo* *.dat *.txt *.gnuplot *.png forces scf
mkdir forces scf

vfactor=2.2



cat > in_master.txt<<EOF
&units
 energy = 'eV'
 length = 'ang'
 time = 'fs'
 mass='hau'
 /
&calculation
 processing = 'scf'
 post_processing='forces'
 post_processing_dir = 'forces'
 /
&element
 ne = 1
 symbol(1) = 'Fe'
 q(1) = 8.0
 q_d(1) = 7.0
 u_lcn(1) = 20.0000000000000000
 i_stoner_d(1) = 1.0
 xi_so_d(1) = 0.06
 /
&element_tb
 filename(1) = '$TBPARAM_DIR/fe_par_fcc_bcc_sc_gga_fl'
 /
&lattice
 v_factor = $vfactor
 v(1,:) = 10.000000000000000, 0.0000000000000000, 0.0000000000000000
 v(2,:) = 0.0000000000000000, 10.000000000000000, 0.0000000000000000
 v(3,:) = 0.0000000000000000, 0.0000000000000000, 10.0000000000000000
 /
&atom
 ns = 4
 na = 10
 ntag = 1
 stag(1) = 10
 tag(1) = 'Fe_chain'
 pbc = 0, 0, 1
 r(1,:) = 0, 0, 0
 r(2,:) = 0, 0, 0.1
 r(3,:) = 0, 0, 0.2
 r(4,:) = 0, 0, 0.3
 r(5,:) = 0, 0, 0.4
 r(6,:) = 0, 0, 0.5
 r(7,:) = 0, 0, 0.6
 r(8,:) = 0, 0, 0.7
 r(9,:) = 0, 0, 0.8
 r(10,:) = 0, 0, 0.9
 m_listing = 'by_atom'
 m_coord = 'spherical'
 m(1,:) = 2.0000000000000000, 17.0000000000000000, 12.0000000000000000
 m(2,:) = 2.0000000000000000, 32.000000000000000,  25.0000000000000000
 m(3,:) = 2.0000000000000000, 90.0000000000000000, 60.0000000000000000
 m(4,:) = 2.0000000000000000, 111.0000000000000000, 95.0000000000000000
 m(5,:) = 2.0000000000000000, 32.000000000000000,  115.0000000000000000
 m(6,:) = 2.0000000000000000, 23.0000000000000000, -52.0000000000000000
 m(7,:) = 2.0000000000000000, 17.0000000000000000, 125.0000000000000000
 m(8,:) = 2.0000000000000000, 32.000000000000000,  -125.0000000000000000
 m(9,:) = 2.0000000000000000, 90.0000000000000000, 60.0000000000000000
 m(10,:) = 2.0000000000000000, 123.0000000000000000, 75.0000000000000000
 lambda_pen_listing= 'by_tag'
 lambda_pen(1) = 10.0
 m_coord = 'spherical'
 /
&mesh
 type = 'mp'
 gx = 1, 1, 10
 dx = 0, 0, 0
 /
&hamiltonian_tb
 m_penalization = 'theta,phi'
 /
&energy
 smearing = 'mv'
 degauss = 0.1
 /
&mixing
 alpha = 0.05
 /
&scf
 delta_en = 0.0001
 delta_q  = 0.0001
 verbose = .true.
 ni_max = 1500
 /
&forces
 computed=.true.
 /
EOF

# Run TBKOSTER
$BIN_DIR/TBKOSTER.x 


